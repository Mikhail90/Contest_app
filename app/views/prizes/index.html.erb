<h1>Listing prizes</h1>

<table>
  <tr>
    <th>Prize</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prizes.each do |prize| %>
  <tr>
    <td><%= prize.prize %></td>
    <td><%= prize.description %></td>
    <td><%= link_to 'Show',  '/contests/'+(@contest.id.to_s)+'/prizes/'+(prize.id.to_s)%></td>
    <td><%= link_to 'Edit', '/contests/'+(@contest.id.to_s)+'/prizes/'+(prize.id.to_s)+'/edit' %></td>
    <td><%= link_to 'Destroy', prize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Prize', '/contests/'+(@contest.id.to_s)+'/prizes/new' %>
